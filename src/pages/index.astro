---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import HeroImage from "../assets/images/hero-bg.png";
import type { Section } from "../lib/types";
import LogoCloud from "@/components/LogoCloud.astro";
import VideoPlayer from "@/components/VideoPlayer.astro";
import Cards from "@/components/Cards.astro";
import { getImage, Image } from "astro:assets";
import CustomerImg from "../assets/images/customer-service-card.png";
import ApiImg from "../assets/images/api-card.png";
import PhoneImg from "../assets/images/phone-card.png";
import WidgetImg from "../assets/images/widget-card.png";
import ContactImg from "../assets/images/contact-card.png";

const heroBackgroundSrc = await getImage({
  src: HeroImage,
  format: "webp",
  quality: "mid",
});
const contactBackgroundSrc = await getImage({
  src: ContactImg,
  format: "webp",
  quality: "high",
});

const SECTIONS: Section[] = [
  {
    name: "Features",
    href: "#features",
  },
  {
    name: "Numbers",
    href: "#numbers",
  },
  {
    name: "Integrations",
    href: "#integrations",
  },
  {
    name: "Contact",
    href: "#contact",
  },
];
---

<Layout>
  <div class="noise"></div>
  <header
    class="z-50 relative hero-bg pb-20"
    style={`background: url(${heroBackgroundSrc.src}) center center no-repeat; background-size: 2100px;`}
  >
    <Navbar sections={SECTIONS} />
    <div class="py-24 flex justify-center items-center flex-col">
      <h1
        class="font-bold text-7xl max-w-4xl text-center leading-[88%] text-bg bg-clip-text text-transparent py-8 blur-enter delay-75 transition-none"
      >
        Resolve 80% of your support tickets. Instantly.
      </h1>
      <p
        class="text-center max-w-xl text-xl opacity-50 delay-500 transition-none blur-enter"
      >
        Discover the ultimate customer support solution with Luna, the AI
        chatbot designed to revolutionize your customer experience.
      </p>
      <button
        class="mt-14 py-3 px-8 text-black rounded-full font-bold text-xl animate-in fade-in-0 slide-in-from-bottom-2 in duration-700 fill-mode-both delay-1000 transition-none zoom-in-[98%] relative z-10 group"
        aria-label="Get Started"
      >
        <a href="#contact" class="z-20 text-black relative top-0 left-0"
          >Get Started</a
        >
        <div
          class="w-full h-full bg-white absolute top-0 left-0 rounded-full z-[5]"
        >
        </div>
        <div class="group-hover:opacity-90 opacity-60 duration-200 ease-out">
          <div
            class="glow-button bg-violet-400 opacity-50 top-0 -left-1 scale-animation"
          >
          </div>
          <div
            class="glow-button bg-blue-400 opacity-60 top-0 -right-1 delay-300 transition-none scale-animation"
          >
          </div>
        </div>
      </button>
    </div>
    <LogoCloud />
  </header>
  <main id="main" class="flex flex-col">
    <section id="video">
      <VideoPlayer />
    </section>
    <section id="features">
      <h3 class="uppercase text-headingGray text-center font-bold mb-10">
        All the features you need and more...
      </h3>
      <Cards />
    </section>
    <section id="numbers" class="py-20">
      <div
        class="max-w-1200 w-full rounded-xl isolate relative m-auto bg-gradient-to-b from-[#3d3d3d] to-cardBlack p-[1px] flex flex-col items-center"
      >
        <div class="noise rounded-xl z-30 mix-blend-screen opacity-[0.1]"></div>
        <div
          class="absolute w-[calc(100%-2px)] h-[calc(100%-2px)] bg-cardBlack rounded-[11px] -z-10"
        >
        </div>
        <h3
          class="uppercase text-headingGray text-center font-bold mb-10 mt-14"
        >
          Luna in numbers
        </h3>
        <h2 class="text-5xl font-semibold max-w-2xl m-auto text-center">
          Accelerating Success with PointAI & Luna
        </h2>
        <ul class="flex my-24 justify-evenly w-full">
          <li>
            <h4
              class="text-8xl bg-gradient-to-b from-blue-400 to-indigo-700 text-transparent bg-clip-text font-semibold"
            >
              80%
            </h4>
            <p class="text-white/70 mt-8 max-w-[230px]">
              Average success rate of resolving customer issues
            </p>
          </li>
          <li>
            <h4
              class="text-8xl bg-gradient-to-b from-blue-400 to-indigo-700 text-transparent bg-clip-text font-semibold"
            >
              -70%
            </h4>
            <p class="text-white/70 mt-8 max-w-[230px]">
              Decrease in customer support expenses
            </p>
          </li>
          <li>
            <h4
              class="text-8xl bg-gradient-to-b from-blue-400 to-indigo-700 text-transparent bg-clip-text font-semibold"
            >
              94%
            </h4>
            <p class="text-white/70 mt-8 max-w-[230px]">
              Average customer satisfaction levels after using Luna
            </p>
          </li>
        </ul>
      </div>
    </section>
    <section id="integrations" class="pb-20">
      <div
        class="max-w-1200 w-full rounded-xl isolate relative m-auto bg-gradient-to-b from-[#3d3d3d] to-cardBlack p-[1px] flex flex-col items-center"
      >
        <div class="noise rounded-xl z-30 mix-blend-screen opacity-[0.1]"></div>
        <div
          class="absolute w-[calc(100%-2px)] h-[calc(100%-2px)] bg-cardBlack rounded-[11px] -z-10"
        >
        </div>
        <h3
          class="uppercase text-headingGray text-center font-bold mb-10 mt-14"
        >
          Custom-tailored for your customers
        </h3>
        <h2 class="text-5xl font-semibold max-w-2xl m-auto text-center">
          Your Power Tool for Precision Customer Service
        </h2>
        <p class="text-white/70 max-w-xl mt-6 m-auto text-center">
          Elevate your customer experience with Luna, drawing from multiple
          truth sources including Intercom articles, company data, and public
          URLs for precise answers. Harness the power of conversation data to
          supercharge Luna's effectiveness and provide standout service.
        </p>
        <Image
          quality="high"
          alt="infographic displaying different sources for the AI training. Articles, Your CMS, Public URLs, Conversation Data"
          src={CustomerImg}
          format="webp"
          class="max-w-2xl m-auto mt-8 pointer-events-none"
        />
      </div>
    </section>
    <section id="integrations" class="pb-20">
      <div
        class="max-w-1200 w-full rounded-xl isolate relative m-auto bg-gradient-to-b from-[#3d3d3d] to-cardBlack p-[1px] flex flex-col items-center"
      >
        <div class="noise rounded-xl z-30 mix-blend-screen opacity-[0.1]"></div>
        <div
          class="absolute w-[calc(100%-2px)] h-[calc(100%-2px)] bg-cardBlack rounded-[11px] -z-10"
        >
        </div>
        <h3
          class="uppercase text-headingGray text-center font-bold mb-10 mt-14"
        >
          Multilingual and Multiplatform
        </h3>
        <h2 class="text-5xl font-semibold max-w-2xl m-auto text-center">
          Unleash Luna's Versatility
        </h2>
        <p class="text-white/70 max-w-xl mt-6 m-auto text-center">
          Streamline your interactions with Luna, use it anywhere you want.
          Seamlessly integrate Luna into your preferred platform, be it social
          media, your website, or use our API to embed it in your own app.
        </p>
        <div class="flex items-baseline max-w-full">
          <div class="flex">
            <Image
              alt="infographic displaying Luna on different platforms. Website widget"
              src={WidgetImg}
              format="webp"
              class="pointer-events-none w-full object-contain"
              quality="mid"
            />
          </div>
          <div class="flex -mx-16">
            <Image
              alt="infographic displaying Luna on different platforms. Social media chatbot"
              src={PhoneImg}
              format="webp"
              quality="mid"
              class="pointer-events-none w-full object-contain"
            />
          </div>
          <div class="flex">
            <Image
              alt="infographic displaying Luna on different platforms. API illustration"
              src={ApiImg}
              format="webp"
              quality="mid"
              class="pointer-events-none w-full object-contain"
            />
          </div>
        </div>
      </div>
    </section>
    <section id="contact" class="pb-20">
      <div
        class="max-w-1200 w-full rounded-xl isolate relative m-auto bg-gradient-to-b from-[#3d3d3d] to-cardBlack p-[1px] flex flex-row justify-between items-stretch overflow-hidden"
      >
        <div class="noise rounded-xl z-30 mix-blend-screen opacity-[0.1]"></div>
        <div
          class="absolute w-[calc(100%-2px)] h-[calc(100%-2px)] bg-cardBlack rounded-[11px] -z-10"
        >
        </div>
        <div class="pl-14">
          <h3 class="text-white text-3xl font-semibold mb-5 mt-14">
            We're here to help!
          </h3>
          <p class="text-white/70 max-w-sm mt-6">
            Donâ€™t be shy to reach out! Fill up the form and our team will get
            back to you within hours
          </p>
          <a
            class="mt-64 block w-fit mb-14 py-3 px-8 text-black bg-white rounded-full font-bold text-xl"
            href="https://calendly.com/akhamidov/30min"
          >
            Schedule a call</a
          >
        </div>
        <div
          class="w-[55%] p-[1px] opacity-50 relative"
          style={`background: url(${contactBackgroundSrc.src}) center center no-repeat; background-size: cover`}
        >
          <a
            href="mailto:hello@pointai.tech"
            class="absolute right-16 bottom-16 text-3xl">hello@pointai.tech</a
          >
        </div>
      </div>
    </section>
  </main>
</Layout>

<style define:vars={{ backgroundSrc: heroBackgroundSrc }}>
  .text-bg {
    background: linear-gradient(
      to left bottom,
      rgb(255, 255, 255) 30%,
      rgba(255, 255, 255, 0.38)
    );
    -webkit-background-clip: text;
    letter-spacing: -0.02em;
  }

  .noise {
    z-index: -20;
    position: absolute;
    inset: 0;
    background-image: url(../assets/images/noise.webp);
    opacity: 0.15;
    height: 100%;
    mix-blend-mode: overlay;
    pointer-events: none;
    background-size: 110px;
  }

  @keyframes hue {
    from {
      filter: hue-rotate(0deg) saturate(1) brightness(1.2) blur(0px);
    }
    to {
      filter: hue-rotate(30deg) saturate(1.25) brightness(0.9) blur(48px);
    }
  }

  @keyframes blur-entry {
    from {
      filter: blur(16px) opacity(0) contrast(0%);
      transform: scale(90%) translateY(-20px);
    }
    10% {
      transform: translateY(-20px) scale(90%);
    }
    to {
      filter: blur(0px) opacity(1) contrast(100%);
      transform: scale(100%);
    }
  }

  @keyframes random-scale {
    from {
      transform: scale(0.7);
    }
    to {
      transform: scale(1.3);
    }
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes hue-btn {
    from {
      filter: hue-rotate(0deg) blur(28px) saturate(1.1) opacity(0.85);
    }
    to {
      filter: hue-rotate(10deg) blur(20px) saturate(1.5);
    }
  }

  .scale-animation {
    animation: random-scale 1s infinite alternate;
    animation-timing-function: ease-in-out;
  }

  .blur-enter {
    filter: opacity(0);
    animation: blur-entry 1s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
  }

  .hue-rotate {
    animation: hue 3s infinite alternate;
    animation-timing-function: ease-in-out;
  }

  .glow-button {
    width: 70%;
    height: 130%;
    z-index: -2;
    position: absolute;
    transform: scale(1.1) translateY(-14%);
    border-radius: 100%;
    animation: hue-btn 2s infinite alternate backwards;
    mix-blend-mode: screen;
  }
</style>
